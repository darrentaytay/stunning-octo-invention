{% extends 'template.twig' %}

{% block content %}

    <form class="col s12">
        <table>
            <thead>
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        <input type="text" name="people[][firstname]" value="{{ user.getFirstName() }}" />
                    </td>
                    <td>
                        <input type="text" name="people[][surname]" value="{{ user.getLastName() }}" />
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button class="btn waves-effect waves-light red darken-4" type="submit" name="action">New</button>
        <button class="btn waves-effect waves-light blue darken-4" type="submit" name="action">Save</button>
    </form>

{% endblock %}